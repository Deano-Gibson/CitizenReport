<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CitizenReportWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CitizenReportWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="gov-header">
        <nav class="navbar navbar-expand-lg gov-navbar shadow-sm">
            <div class="container position-relative">
                <!-- Centered brand -->
                <a class="navbar-brand gov-brand mx-auto" asp-controller="Home" asp-action="Index">
                    CitizenReport
                </a>

                <!-- Toggler on the right for mobile -->
                <button class="navbar-toggler position-absolute end-0 me-2" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ReportIssues" ? "active" : "")"
                               asp-controller="Home" asp-action="ReportIssues">Report Issues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")"
                               asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Slim banner with mission text -->
        <div class="gov-banner">
            <div class="container">
                <div class="gov-title">Municipal Services – Web Application</div>
                <div class="gov-subtitle">Report community issues • View local notices • Track service requests</div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="gov-footer mt-auto">
        <div class="container">
            <div class="row align-items-center gy-2">
                <div class="col-md-6">
                    <strong>CitizenReport</strong> — Municipal Services Portal
                </div>
                <div class="col-md-6 text-md-end">
                    <a class="footer-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    <span class="mx-2 text-secondary">•</span>
                    <a class="footer-link" href="#">Accessibility</a>
                    <span class="mx-2 text-secondary">•</span>
                    <a class="footer-link" href="#">Contact</a>
                </div>
            </div>
            <div class="small mt-2">
                &copy; @DateTime.UtcNow.Year Municipality Name. All rights reserved.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
